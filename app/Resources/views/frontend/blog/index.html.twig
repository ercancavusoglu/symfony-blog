{% extends '::frontbase.html.twig' %}

{% block content %}

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">


            <h2>
                {{ blog.title }}
            </h2>
            <p><span class="glyphicon glyphicon-time"></span> Posted on
                {{ blog.createdAt | date("Y-m-d H:i") }}
            </p>
            <p>
                {{ blog.content }}
            </p>

            <hr>

        </div>
        {{ include('frontend/_common/sidebar.html.twig',{ 'categories': categories }) }}
    </div>
    <!-- /.row -->

{% endblock %}