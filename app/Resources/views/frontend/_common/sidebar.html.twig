<!-- Blog Sidebar Widgets Column -->
<div class="col-md-4">


    <!-- Blog Categories Well -->
    <div class="well">
        <h4>Blog Categories</h4>
        <div class="row">
            <div class="col-lg-12">
                <ul class="list-unstyled">

                    {% for category in categories %}
                        <li>
                            <a href="{{ path('frontend_category_show', {'slug': category.slug}) }}">
                                {{ category.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <!-- /.row -->
    </div>


    <!-- Blog Search Well -->
    <div class="well">
        <h4>Blog Search</h4>
        <form id="formsearch" name="p" method="get" action="{{ path('frontend_blog_search') }}">
            <div class="input-group">
                <input type="text" name="search" class="form-control">
                <span class="input-group-btn">
                                      <button class="btn btn-default" type="submit">
                                          <span class="glyphicon glyphicon-search"></span>
                                      </button>
                                  </span>
            </div>
        </form>

        <!-- /.input-group -->
    </div>

</div>